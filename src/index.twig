{% extends './partials/_template.twig' %}
{% block main %}
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-9">
          <p>Width of carousel is determined by its container element.</p>
        <div class="carousel__stage">
          <ul class="carousel__container">
            {% for item in carousel %}
              <li class="carousel__item">
                <p>
                  {{ loop.index }} {{ item.heading }}
                </p>
                {# <img src="http://lorempixel.com/400/200/animals/{{loop.index}}" alt=""> #}
              </li>
            {% endfor %}
          </ul>
          <ul class="carousel__controls">
              <li><button type="button" class="btn btn--prev"><span>Prev</span></button></li>
              <li><button type="button" class="btn btn--next"><span>Next</span></button></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
